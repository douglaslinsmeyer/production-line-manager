# Production Line API - Environment Variables Example
# Copy this file to .env and update values for local development

# Server Configuration
PORT=8080
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/production_lines?sslmode=disable

# MQTT Configuration
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_CLIENT_ID=production-line-api
MQTT_QOS=1

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10s
